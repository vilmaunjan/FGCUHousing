<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentAwardInfoConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/editbox_dropdown_dark_frame">


    <TextView
        android:id="@+id/TitleBox"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:gravity="top|bottom|start|end"
        android:text="@string/AwardInfoTitle"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/AwardDescriptionBox"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginStart="8dp" />

    <TextView
        android:id="@+id/AwardDescriptionBox"
        android:layout_width="360dp"
        android:layout_height="91dp"
        android:layout_marginBottom="280dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="0dp"
        android:text="@string/awardInfoDescription"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/TitleBox"
        app:layout_constraintRight_toRightOf="@+id/TitleBox" />
</android.support.constraint.ConstraintLayout>