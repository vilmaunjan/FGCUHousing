<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vilma.fgcuhousing.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_type_of_user"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/btnResident"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_above="@+id/btnResident"
        android:layout_marginBottom="47dp"
        android:id="@+id/logoImg"
        tools:background="@android:color/transparent"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStaff"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonOnClick"
        tools:ignore="RtlHardcoded" />

    <Button
        android:text="@string/resident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnResident"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/btnStaff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonOnClick"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
