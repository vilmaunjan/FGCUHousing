<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vilma.fgcuhousing.EventManager"
    tools:showIn="@layout/activity_event_manager">

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEdit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:onClick="buttonOnClick"
        android:text="Create event"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:text="Edit Events"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="202dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/btnDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Events"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="286dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/btnFeedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Events Feedback"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="380dp"
        android:layout_marginBottom="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Manage events"
        android:textSize="24sp" />
</RelativeLayout>
